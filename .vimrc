" vim/colors
syntax enable
set background=dark
set guifont=Monospace\ 14

set backspace=2
set clipboard=unnamedplus
set cursorline
set hls
set nocompatible
set number
set splitbelow
set shiftwidth=4                " indenting space size
set softtabstop=4
set tabstop=4                    " tab instead of space size
set expandtab                    " replace tab with space
set ai                           " auto indenting
set smartindent

" file encoding
set encoding=utf-8
set fileencodings=utf-8,cp950
set ruler                        " display setting value in right cornor
set ic                           " case insensitive searching

set foldmethod=marker            " code folding
set foldmarker={{{,}}}
set foldenable
set foldlevel=99
set foldmethod=syntax
